{
  "manifest_version": 2,
  "name": "HU Google plug-in",
  "description": "This extension is meant for research purposes of the HU.",
  "version": "2.1",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "options_page": "options.html",
  "browser_action": {
    "default_title": "Group manager",
    "default_popup":"options.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.google.nl/*",
        "*://*.google.com/*"
      ],
      "js": [
        "groups.js",
        "mangle.js"
      ],
      "css": [
        "styles.css"
      ]
    }
  ],
  "permissions": [
    "storage"
  ]
}